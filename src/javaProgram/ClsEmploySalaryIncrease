package com.java;

import java.util.Arrays;
import java.util.List;

class Employee {
	String name;
	double salary;

	Employee(String name, double salary) {
		this.name = name;
		this.salary = salary;
	}

	void incrementSalary(double percent) {
		this.salary += this.salary * percent / 100;
	}

	@Override
	public String toString() {
		return name + " : " + salary;
	}
}

public class ClsEmploySalaryIncrease {
	public static void main(String[] args) {
		List<Employee> employees = Arrays.asList(new Employee("sam", 4500), new Employee("susan", 3900),
				new Employee("steve", 5000), new Employee("mark", 4200));

		employees.stream().filter(e -> e.salary >= 4000 && e.name.toLowerCase().startsWith("s"))
				.forEach(e -> e.incrementSalary(40));

		/*
		 * employees.stream().filter(s -> s.salary >= 5000 &&
		 * s.name.toLowerCase().startsWith("s")) .forEach(s -> s.incrementSalary(50));
		 */

		employees.forEach(System.out::println);
	}
}
