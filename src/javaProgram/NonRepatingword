package com.java;

import java.util.Arrays;
import java.util.stream.Collectors;

public class NonRepatingword {

	public static void main(String[] args) {
		String input = "aaabbbsurajgggmike";
		String[] wordsArray = input.split("(.)\\1+");

		// Use Java 8 streams to filter out empty strings and join the remaining
		// elements.
		String output = Arrays.stream(wordsArray).filter(word -> !word.isEmpty()).collect(Collectors.joining(", "));

		System.out.println(output);

	}

}
