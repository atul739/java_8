package com.java;

import java.util.Arrays;
import java.util.stream.IntStream;

public class Multiplication {

	public static void main(String[] args) {
		int[] arr = { 1, 2, 3, 4 };

		int[] result = IntStream.range(0, arr.length)
				.map(i -> IntStream.range(0, arr.length)
						.filter(j -> j != i)// Skip same index
						.map(j -> arr[j])// Get the element
						.reduce(1, (a, b) -> a * b))
				.toArray();

		System.out.println(Arrays.toString(result)); // [24, 12, 8, 6]

	}

}
